<% provide(:title, @post.title) %>

<header class="jumbotron_subhead" id="overview">
  <div class="container">
    <h1><%= @post.title %></h1>
  </div>
</header>

<div class="container textarea">
	<div class="row">
    <div class="span10 offset1">
    	<p>
				<%= link_to "zu Le-Basecamp", posts_path %>
				|
				<%= link_to "Projekt bearbeiten", edit_post_path(@post) %>
				|
				<%= link_to "Projekt löschen", @post, :method => :delete, :confirm => "Wirklich löschen?" %>
			</p>
      <p><%= @post.text %></p>
    </div>
  </div>

  <div class="row">
    <div class="span10 offset1">
      <h5 class="comment">Kommentare</h5>
    </div>
  </div>

  <div class="row">
    <div class="span10 offset1">
      <% @post.comments.each do |comment| %>
	      <div class="margin">
					<p><%= comment.text %></p>
					<p><%= time_ago_in_words comment.created_at %> ago</p>
					<p><%= link_to "Kommentar löschen", [@post, comment], :method => :delete, :confirm => "Wirklich löschen?" %></p>
				</div>
			<% end %>
    </div>
  </div>

  <div class="row">
    <div class="span10 offset1">
			<%= form_for [@post, @post.comments.build] do |f| %>
				<p><%= f.text_area :text, :size => '40x10', placeholder: "Füge ein Kommentar hinzu ..." %></p>
				<p><%= f.submit "abschicken", class: "btn btn-large btn-inverse" %></p>
			<% end %>
    </div>
  </div>
</div>
<div class="container">
	<div class="row">
	  <div class="span10 offset1">
		<%= link_to 'zu Le-Basecamp', posts_path %>
	  </div>
	</div>
</div>