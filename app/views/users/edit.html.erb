<% provide(:title, "Einstellungen") %> 

<header class="jumbotron_subhead" id="overview">
  <div class="container">
    <h1>Bearbeite deine Einstellungen</h1>
  </div>
</header>

<div class="container textarea">
  <div class="row">
    <div class="span4 offset4">
      <%= form_for(@user, :html => {:multipart => true}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password, "Passwort" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Passwort-Wiederholung" %>
        <%= f.password_field :password_confirmation %>

        <%= f.label :image, "Lade ein Anzeigebild hoch:" %>
        <%= f.file_field :image %>

        <%= f.submit "speichern!", class: "btn btn-large btn-inverse buttonmargin" %>
      <% end %>

      <%= gravatar_for(@user) %>
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>