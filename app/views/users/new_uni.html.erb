<% provide(:title, 'Uni erstellen') %>

<header class="jumbotron_subhead" id="overview">
  <div class="container">
    <h1>Uni erstellen</h1>
  </div>
</header>

<div class="container textarea">
  <div class="row">
    <div class="span4 offset4">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :uni, "Uni: true" %>
        <%= f.text_field :uni, value: true %>

        <%= f.label :customer, "Customer: false" %>
        <%= f.text_field :customer %>

        <%= f.label :password, "Passwort" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "PW-Wiederholung" %>
        <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="span12 center">
      <%= f.submit "Uni erstellen", class: "btn btn-large btn-inverse" %>
    </div>
  </div>
      <% end %>
</div>